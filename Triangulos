#include <stdio.h>
#include <stdlib.h>

int main()
{
	float l1, l2, l3;
	
	printf("digite valor lado 1");
	scanf("%f", &l1);
	
	printf("digite valor lado 2");
	scanf("%f", &l2);
	
	printf("digite valor lado 3");
	scanf("%f", &l3);
	
	//Testa se o tri�ngulo � v�lido
	
	
	if (((l1+l2)<l1)||((l1+l3)<l2))
{
	
	printf("tringulo nao e valido");

}
	else

		
	//VERIFICA TIPO DE TRI�NGULO
	if((l1=l2) && (l2=l3))
    printf ("triangulo e equilatero");

	else
	


	if((l1!=l2) && (l2!=l3) && (l1!=l3))	
	printf ("triangulo e escaleno"); 


	else
		
	if((l1=l2) && (l1!=l3) || (l2=l3) && (l2!=l1) || (l1=l3) && (l1!=l2))
	printf ("triangulo e isoceles");	


}
